@model Lession2DBFirst.Models.Order_Detail

@{
    ViewBag.Title = "Details";
}

<h3 class="text-primary">Chi tiết SP - @Model.OrderDetailId</h3>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-dark">
                <th style="text-align: center">
                    Mã CTĐH
                </th>
                <th style="text-align: center">
                    Mã SP
                </th>
                <th style="text-align: center">
                    Mã đơn hàng
                </th>
                <th style="text-align: center">
                    Số lượng
                </th>
                <th style="text-align: center">
                    Giá
                </th>
                <th style="text-align: center">
                    Thao tác
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-info">
                <td>
                    @Model.OrderDetailId
                </td>
                <td>
                    @Model.ProductId
                </td>
                <td>
                    @Model.OrderId
                </td>
                <td>
                    @Model.Quantity
                </td>
                <td>
                    @Model.UnitPrice
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.OrderDetailId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = Model.OrderDetailId }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.OrderDetailId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    </table>

</div>
<p>
    @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Lưu", "Edit", new { id = Model.OrderDetailId }, new { @class = "btn btn-primary" })
</p>



