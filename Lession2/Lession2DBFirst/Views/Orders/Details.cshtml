@model Lession2DBFirst.Models.Order

@{
    ViewBag.Title = "Details";
}

<h3 class="text-primary">Chi tiết SP - @Model.OrderId</h3>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-dark">
                <th style="text-align: center">Tên KH</th>
                <th style="text-align: center">Thời gian</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-info">
                <td>@Model.CustomerName</td>
                <td>@Model.DateTime</td>
            </tr>
        </tbody>
    </table>

</div>
<p>
    @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Lưu", "Edit", new { id = Model.OrderId }, new { @class = "btn btn-primary" })
</p>
