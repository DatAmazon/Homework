@model IEnumerable<Lession2DBFirst.Models.Order_Detail>

@{
    ViewBag.Title = "Index";
}
@{
    int? OrderId = Model.FirstOrDefault()?.OrderId;
}
<h>Chi tiết hóa đơn @OrderId</h>

@*<p style="float:right;">
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-info text-right" })
    </p>*@

<table class="table table-striped table-bordered">
    <tr class="table-dark">
        <th style="text-align: center">
            Mã CTĐH
        </th>
        <th style="text-align: center">
            Mã SP
        </th>
        <th style="text-align: center">
            Mã đơn hàng
        </th>
        <th style="text-align: center">
            Số lượng
        </th>
        <th style="text-align: center">
            Giá
        </th>
        <th style="text-align: center">
            Thành tiền
        </th>
    </tr>

    @{int TotalMoney = 0;}

    @foreach (var item in Model)
    {
        int cal = (item.UnitPrice * item.Quantity);
        <tr class="table-info">
            <td>
                @item.OrderDetailId
            </td>
            <td>
                @item.ProductId
            </td>
            <td>
                @item.OrderId
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.UnitPrice
            </td>
            <td>
                @cal
            </td>
        </tr>
        TotalMoney += cal;
    }
</table>

<p style="float:left;">
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-warning" })
</p>

<strong style="float:right;">
    Tổng tiền: @TotalMoney
</strong>