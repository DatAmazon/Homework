@model Lession2DBFirst.Models.Order

@{
    ViewBag.Title = "Xóa";
}

<h4 style="color: red">Bạn có chắc chắn muốn xóa đơn hàng có ID - @Model.OrderId</h4>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-dark">
                <th style="text-align: center">Tên KH</th>
                <th style="text-align: center">Thời gian</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-info">
                <td>@Model.CustomerName</td>
                <td>@Model.DateTime</td>
            </tr>
        </tbody>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-3">
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-warning" }) |
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
    }
</div>
