@model IEnumerable<Lession2DBFirst.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h3>Danh sách SP</h3>

@using (Html.BeginForm())
{
    <p>
        <input name="SearchString" class="btn-outline-primary" placeholder="Nhập tên sp cần tìm kiếm" />
        <input type="submit" value="Tìm" class="btn btn-outline-success" style="margin-bottom: 3px; padding: 2px 15px; "/>
    </p>
}


<p style="float:right;">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-info text-right" })
</p>

<table class="table table-striped table-bordered">
    <tr class="table-dark">
        <th style="text-align: center">
            Mã SP
        </th>
        <th style="text-align: center">
            Tên SP
        </th>
        <th style="text-align: center">
            Giá
        </th>
        <th style="text-align: center">
            Thao tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-info">
            <td>
                @item.ProductID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price
            </td>
            <td style="text-align: center">
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
