@model DB.DbAccess.Product
@{
    ViewBag.Title = "Create";
}

<h2 class="text-primary">Thêm SP mới</h2>
<form method="post" action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="col-md-10">
            <input type="text" class="form-control" name="name" required="required" placeholder="Tên SP" oninvalid="this.setCustomValidity('Điền tên sản phẩm')" />
        </div>
        <div class="col-md-10 mt-3">
            <input type="number" class="form-control" name="price" required="required" placeholder="Giá" oninvalid="this.setCustomValidity('Điền giá bán')" />
        </div>
        <div class="col-md-10 mt-3">
            <input type="number" class="form-control" name="quantity" required="required" placeholder="Số lượng" oninvalid="this.setCustomValidity('Điền số lượng')" />
        </div>

        <div class="col-md-offset-2 col-md-10 mt-3">
            <a href="~/Products/Index" class="btn btn-primary">Trở về</a> |
            <input type="submit" value="Thêm" class="btn btn-success" />
        </div>
    </div>
</form>
